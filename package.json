{
  "name": "@tsb/open-traffic-count-microsite",
  "private": true,
  "version": "0.1.0",
  "description": "Jekyll Microsite for the OTC project",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "jekyll": "tools/run-jekyll.sh",
    "lint": "eslint --fix src/assets/js",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/technologiestiftung/open-traffic-count-microsite.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/technologiestiftung/open-traffic-count-microsite/issues"
  },
  "homepage": "https://github.com/technologiestiftung/open-traffic-count-microsite#readme",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "bulma": "^0.8.0"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|scss|ts|tsx|md)": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t && npm run lint-staged"
    }
  },
  "eslintConfig": {
    "plugins": [
      "jest"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
